{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "object-literal-sort-keys": false,
        "quotemark": false
    },

    "rules": {
        "max-classes-per-file": false,
        "object-literal-sort-keys": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "any",
                "named-imports-order": "any"
            }
        ],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"]
    },
    "rulesDirectory": []
}